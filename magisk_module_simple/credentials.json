{
  "pixel_device": {
    "ip_address": "192.168.1.198",
    "ssh_user": "root",
    "ssh_key_path": "/opt/media-pipeline/.ssh/pixel_key"
  },
  "telegram": {
    "bot_token": "YOUR_TELEGRAM_BOT_TOKEN",
    "chat_id": "YOUR_TELEGRAM_CHAT_ID",
    "enabled": true
  },
  "monitoring": {
    "enabled": true,
    "interval_seconds": 30,
    "directories": [
      "/sdcard/DCIM/Camera",
      "/sdcard/Pictures/Screenshots",
      "/sdcard/Download"
    ],
    "supported_formats": [".jpg", ".jpeg", ".png", ".heic", ".mov", ".mp4"]
  },
  "auto_cleanup": {
    "enabled": false,
    "delete_after_hours": 24,
    "keep_original": true
  }
}